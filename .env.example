# Application
APP_NAME=basketball-stats-service
APP_VERSION=0.0.1
APP_ENV=local
APP_PORT=8080

# Logger
APP_LOG_LEVEL=info
APP_LOG_FORMAT=json
APP_LOG_PRETTY=false
APP_LOG_DEBUG=false

# Postgres
APP_POSTGRES_HOST=localhost
APP_POSTGRES_PORT=5432
APP_POSTGRES_USER=postgres
APP_POSTGRES_PASSWORD=postgres
APP_POSTGRES_DB=basketball
APP_POSTGRES_SSLMODE=disable

# Optional test overrides
# APP_POSTGRES_DB=basketball_test

# Contract tests flag (set to 1 in CI when needed)
CONTRACT_TESTS=0
