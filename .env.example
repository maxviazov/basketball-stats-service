# Application
APP_NAME=basketball-stats-service
APP_VERSION=0.0.1
APP_ENV=local  # allowed: local|dev|staging|prod
APP_PORT=8080

# Logger
APP_LOG_LEVEL=info   # debug|info|warn|error
APP_LOG_FORMAT=json  # json|console
APP_LOG_PRETTY=false # pretty print for local dev only

# Postgres
APP_POSTGRES_HOST=localhost
APP_POSTGRES_PORT=5432
APP_POSTGRES_USER=your_username
APP_POSTGRES_PASSWORD=your_password
APP_POSTGRES_DB=basketball
APP_POSTGRES_SSLMODE=disable # usually disable for local dev

# Optional test overrides
# APP_POSTGRES_DB=basketball_test

# Contract tests flag (set to 1 in CI when needed)
CONTRACT_TESTS=0
